<div class="c-picture-block">
    {% for i in range(0,3) -%}
        <div class="col-xs-24 col-sm-24 col-md-12 c-picture-block__element">
            <div class="row">
                <div class="col-xs-24 col-sm-9 col-md-11">
                    <div class="c-picture-block__media-container">
                        {% embed 'ImhBaseBundle:Components:image.html.twig' with {'rounded': true} %}
                            {%- block image_data_original -%}
                                {{ asset('bundles/imhbase/images/'~('imh.base.repertoire.concert.'~i~'.name')|trans~'.jpg') }}
                            {%- endblock -%}
                            {%- block image_alt -%}
                                {{ ('imh.base.repertoire.concert.'~i~'.composer')|trans }}
                            {%- endblock -%}
                        {% endembed %}
                    </div>
                </div>
                <div class="col-xs-24 col-sm-15 col-md-13">
                    <div class="c-picture-block__description{% if loop.last %} c-picture-block__description--last{% endif %}">
                        {% embed 'ImhBaseBundle:Components:title-tertiary.html.twig' %}
                            {% block title %}
                                {{ ('imh.base.repertoire.concert.'~i~'.composer')|trans }}
                            {% endblock %}
                        {% endembed %}
                        <p class="c-picture-block__life / o-vertical-interval-top-x-small">{{ ('imh.base.repertoire.concert.'~i~'.life')|trans }}</p>
                        <p class="c-picture-block__work / o-vertical-interval">{{ ('imh.base.repertoire.concert.'~i~'.work')|trans }}</p>
                        <p class="c-picture-block__arrangement / o-vertical-interval-bottom-x-small">{{ ('imh.base.repertoire.concert.'~i~'.arrangement')|trans }}</p>
                        <div class="c-picture-block__duration">
                            {{ ('imh.base.repertoire.concert.duration')|trans }}{{ ('imh.base.repertoire.concert.'~i~'.duration')|trans }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {%- endfor %}
</div>